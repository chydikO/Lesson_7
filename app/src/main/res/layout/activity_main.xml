<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:gravity="center|right"
        android:layout_margin="5dp"
        android:text="TextView"
        android:enabled="true"
        android:cursorVisible="false" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_column="3"
        android:contentDescription="C"
        android:text="C" />

    <Button
        android:id="@+id/btn_one"
        android:contentDescription= "1"
        android:text="1" />
    <Button
        android:id="@+id/btn_two"
        android:contentDescription= "2"
        android:text="2" />
    <Button
        android:id="@+id/btn_three"
        android:contentDescription= "3"
        android:text="3" />
    <Button
        android:id="@+id/btn_multiplication"
        android:contentDescription= "*"
        android:text="*" />
    <Button
        android:id="@+id/btn_four"
        android:contentDescription= "4"
        android:text="4" />
    <Button
        android:id="@+id/btn_five"
        android:contentDescription= "5"
        android:text="5" />
    <Button
        android:id="@+id/btn_six"
        android:contentDescription= "6"
        android:text="6" />
    <Button
        android:id="@+id/btn_division"
        android:contentDescription= "/"
        android:text="/" />
    <Button
        android:id="@+id/btn_seven"
        android:contentDescription= "7"
        android:text="7" />
    <Button
        android:id="@+id/btn_eight"
        android:contentDescription= "8"
        android:text="8" />
    <Button
        android:id="@+id/btn_nine"
        android:contentDescription= "9"
        android:text="9" />
    <Button
        android:id="@+id/btn_subtraction"
        android:contentDescription= "-"
        android:text="-" />

    <Button
        android:id="@+id/btn_zero"
        android:contentDescription= "0"
        android:layout_gravity="fill"
        android:layout_columnSpan="2"
        android:text="0" />
    <Button
        android:id="@+id/btn_double_zero"
        android:contentDescription= "00"
        android:text="00" />
    <Button
        android:id="@+id/btn_addition"
        android:contentDescription= "+"
        android:layout_gravity="fill"
        android:layout_rowSpan="2"
        android:text="+" />
    <Button
        android:id="@+id/btn_result"
        android:contentDescription= "="
        android:layout_gravity="fill"
        android:layout_columnSpan="3"
        android:text="=" />

</GridLayout>